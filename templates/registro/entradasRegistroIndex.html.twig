{% block body %}
	<main class="container-fluid">
        <div id="content" class="container-fluid" {{ stimulus_controller('table', 
                { 'url': path('registro_show', {'registro': registro.id}),
                'exportName': 'entradasRegistro',
                'options': { 'search' : true, 'showExport' : false },
            })}}  data-table-target="content">
            {{ include('registro/_listEntradas.html.twig', { 
                'registro': registro,
                'entradas': entradas,
