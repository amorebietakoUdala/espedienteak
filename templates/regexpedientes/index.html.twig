{% extends 'base.html.twig' %}

{% block title %}{{ 'app.title.regexpedientes.index' | trans }}{% endblock %}

{% block body %}
	<main class="container-fluid">
        {{ include('regexpedientes/_searchForm.html.twig') }}
        <div id="content" class="container-fluid" {{ stimulus_controller('table', 
                    { 'url': path('regexpedientes_index'),
                    'exportName': 'expedientes',
                    'filters': filters is not empty ? filters : '{}',
                    'options': { 'search' : false, 'showExport' : false },
                })}}  data-table-target="content">
                {{ include('regexpedientes/_list.html.twig', { 
                    'regexpedientes': regexpedientes,
                    'pageSize' : pageSize,
                    'page': page,
                    'sortName': sortName,
                    'sortOrder': sortOrder,
                }) }}
        </div>
	</main>
{% endblock %}